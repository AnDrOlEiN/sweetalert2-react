{
  "name": "sweetalert-react",
  "version": "0.4.4",
  "description": "Using sweetalert in React",
  "main": "lib/SweetAlert.js",
  "license": "MIT",
  "repository": "chentsulin/sweetalert-react",
  "scripts": {
    "clean": "rimraf lib dist coverage",
    "lint": "eslint .",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:cov": "npm test -- -- --coverage",
    "check": "npm run lint && npm run test ",
    "build:lib": "babel src --out-dir lib",
    "build:umd": "webpack src/SweetAlert.js dist/sweetalert-react.js --config webpack.config.development.js",
    "build:umd:min": "webpack src/SweetAlert.js dist/sweetalert-react.min.js --config webpack.config.production.js",
    "build": "npm run build:lib && npm run build:umd && npm run build:umd:min",
    "preversion": "npm run clean && npm run check",
    "version": "npm run build",
    "postversion": "git push && git push --tags && npm run clean",
    "prepublish": "npm run clean && npm run build",
    "postinstall": "node -e \"require('fs').stat('lib', function (e, s) { process.exit(e || !s.isDirectory() ? 1 : 0) })\" || npm run build"
  },
  "author": {
    "name": "C.T. Lin",
    "email": "chentsulin@gmail.com",
    "url": "github.com/chentsulin/sweetalert-react"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "files": [
    "lib/"
  ],
  "keywords": [
    "alert",
    "sweetalert",
    "react",
    "component",
    "react-component"
  ],
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.0",
    "babel-jest": "^16.0.0",
    "babel-loader": "^6.2.7",
    "enzyme": "^2.5.1",
    "eslint": "^3.9.1",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.6.0",
    "jest-cli": "^16.0.2",
    "react": "^15.3.2",
    "react-addons-test-utils": "^15.3.2",
    "react-dom": "^15.3.2",
    "rimraf": "^2.5.4",
    "webpack": "^1.13.3"
  },
  "dependencies": {
    "lodash.pick": "^4.4.0",
    "mousetrap": "^1.6.0",
    "sweetalert": "^1.1.3",
    "warning": "^3.0.0"
  },
  "peerDependencies": {
    "react": "^0.14.0 || ^15.0.0-0"
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  }
}
